{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: Dev (npm run dev)",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Backend: Debug Current File",
            "request": "launch",
            "type": "node",
            "program": "${file}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}